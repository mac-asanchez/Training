<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="Profile_Picture">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">168sp</item>
        <item name="android:src">@drawable/img_profilepictureless</item>
    </style>

    <style name="Profile_Name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#303f9f</item>
    </style>

    <style name="Profile_Education">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Profile_Location_Address">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">20sp</item>
    </style>

    <style name="Profile_Location_City">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Profile_Hobbies_Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">20sp</item>
        <item name="android:textColor">#595959</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Profile_Hobbies">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#6271d0</item>
        <item name="android:padding">10sp</item>
    </style>

</resources>
